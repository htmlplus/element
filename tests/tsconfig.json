{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"experimentalDecorators": true,
		"jsx": "preserve",
		"jsxImportSource": "@htmlplus/element",
		"baseUrl": "..",
		"paths": {
			"@htmlplus/element": ["src/client/index.ts"],
			"@htmlplus/element/*": ["src/client/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
