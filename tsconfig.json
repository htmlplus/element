{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"rootDir": "src",
		"moduleResolution": "bundler",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		},
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"allowJs": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
