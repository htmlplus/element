{
  "name": "@htmlplus/element",
  "version": "0.0.0",
  "license": "MIT",
  "sideEffects": false,
  "author": "Masood Abdolian <m.abdolian@gmail.com>",
  "description": "A powerful library for building scalable, reusable, fast, tastable and lightweight design system for any web technologies. Powerd by Web Component.",
  "type": "module",
  "main": "client/index.js",
  "types": "client/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc && node scripts/build.post.js",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "development:start": "tsx src/development/scripts.start.ts",
    "development:build": "tsx src/development/scripts.build.ts",
    "development:build:watch": "tsx watch src/development/scripts.build.ts",
    "format": "prettier --write ."
  },
  "files": [
    "**/*.*"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "engines": {
    "node": ">= 20.10.0"
  },
  "keywords": [
    "components",
    "custom elements",
    "design systems",
    "web components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htmlplus/element.git"
  },
  "bugs": {
    "url": "https://github.com/htmlplus/element/issues"
  },
  "homepage": "https://github.com/htmlplus/element#readme",
  "dependencies": {
    "@babel/generator": "^7.24.10",
    "@babel/parser": "^7.24.8",
    "@babel/template": "^7.24.7",
    "@babel/traverse": "^7.24.8",
    "@babel/types": "^7.24.9",
    "@types/node": "^20.14.10",
    "change-case": "^5.4.4",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "ora": "^8.0.1",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "cpy": "^11.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "tsx": "^4.16.2",
    "vite": "^5.3.4"
  }
}
