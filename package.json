{
  "name": "@htmlplus/element",
  "version": "0.5.9",
  "license": "MIT",
  "author": "Masood Abdolian <m.abdolian@gmail.com>",
  "description": "A powerful library for building scalable, reusable, fast, tastable and lightweight design system for any web technologies. Powerd by Web Component.",
  "type": "module",
  "main": "client/index.js",
  "types": "client/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc && node scripts/build.post.js",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "development:start": "ts-node --esm src/development/scripts/start.ts",
    "development:build": "ts-node --esm src/development/scripts/build.ts",
    "development:build:watch": "nodemon src/development/scripts/build.ts",
    "format": "prettier --write ."
  },
  "files": [
    "**/*.*"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "engines": {
    "node": ">= 12.7.0"
  },
  "keywords": [
    "components",
    "custom elements",
    "design systems",
    "web components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htmlplus/element.git"
  },
  "bugs": {
    "url": "https://github.com/htmlplus/element/issues"
  },
  "homepage": "https://github.com/htmlplus/element#readme",
  "dependencies": {
    "@babel/generator": "^7.20.4",
    "@babel/parser": "^7.20.3",
    "@babel/traverse": "^7.20.1",
    "@babel/types": "^7.20.2",
    "@types/node": "^18.11.9",
    "change-case": "^4.1.2",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "handlebars": "^4.7.7",
    "ora": "^6.1.2",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "cpy": "^9.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "vite": "^3.2.4"
  }
}
