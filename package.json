{
  "name": "@htmlplus/element",
  "version": "3.0.0",
  "license": "MIT",
  "sideEffects": false,
  "author": "Masood Abdolian <m.abdolian@gmail.com>",
  "description": "A powerful library for building scalable, reusable, fast, tastable and lightweight design system for any web technologies. Powered by Web Component.",
  "type": "module",
  "main": "./dist/client.js",
  "types": "./dist/client.d.ts",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "clean": "rimraf dist",
    "development:start": "vite --config development/vite.config.js",
    "format": "prettier --write ."
  },
  "files": [
    "./dist/*",
    "./package.json",
    "./README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./bundlers.js": {
      "import": "./dist/bundlers.js",
      "types": "./dist/bundlers.d.ts"
    },
    "./internal.js": {
      "import": "./dist/internal.js",
      "types": "./dist/internal.d.ts"
    },
    "./transformer.js": {
      "import": "./dist/transformer.js",
      "types": "./dist/transformer.d.ts"
    },
    "./jsx-runtime": "./dist/jsx-runtime.d.ts"
  },
  "funding": [],
  "engines": {
    "node": ">= 22.10.0"
  },
  "keywords": [
    "components",
    "custom elements",
    "design systems",
    "web components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htmlplus/element.git"
  },
  "bugs": {
    "url": "https://github.com/htmlplus/element/issues"
  },
  "homepage": "https://github.com/htmlplus/element#readme",
  "dependencies": {
    "@babel/generator": "^7.26.0",
    "@babel/parser": "^7.26.1",
    "@babel/template": "^7.25.9",
    "@babel/traverse": "^7.25.9",
    "@babel/types": "^7.26.0",
    "@types/node": "^20.17.1",
    "@types/react": "^18.3.12",
    "change-case": "^5.4.4",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "ora": "^8.1.0",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cpy": "^11.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-node-externals": "^7.1.3",
    "semantic-release": "^24.2.0",
    "tslib": "^2.8.0",
    "vite": "^5.4.10"
  }
}
